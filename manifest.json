{
  "manifest_version": 2,
  "name": "Image Splitter",
  "version": "1.0",
  "description": "Splits an image into 4 equal parts and downloads them",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["downloads"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Image Splitter"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
